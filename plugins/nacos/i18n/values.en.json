{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "nacos": {
      "type": "object",
      "title": "Nacos Configuration",
      "form": true,
      "properties": {
        "mode": {
          "type": "string",
          "title": "cluster Mode, default is cluster",
          "form": true,
          "default": "cluster"
        },
        "replicaCount": {
          "type": "integer",
          "hidden": {
            "path": "nacos/mode",
            "value": "standalone"
          },
          "title": "replicaCount",
          "form": true,
          "default": 1
        },
        "domainName": {
          "type": "string",
          "title": "DNS domainName, cluster.local is default",
          "form": true,
          "default": "cluster.local"
        },
        "storage": {
          "type": "object",
          "title": "Nacos DB Configuration",
          "form": true,
          "properties": {
            "type": {
              "type": "string",
              "titile": "DB type,embedded is default, or db",
              "form": true,
              "default": "embedded"
            },
            "db": {
              "type": "object",
              "title": "MySQL Configuration",
              "form": true,
              "hidden": {
                "path": "nacos/storage/type",
                "value": "mysql"
              },
              "properties": {
                "host": {
                  "type": "string",
                  "title": "MySQL Address",
                  "form": true,
                  "default": "localhost"
                },
                "name": {
                  "type": "string",
                  "title": "MySQL Database",
                  "form": true,
                  "default": "nacos"
                },
                "port": {
                  "type": "integer",
                  "title": "Mysql Port",
                  "form": true,
                  "default": 3306
                },
                "username": {
                  "type": "string",
                  "title": "Mysql username",
                  "form": true,
                  "default": "nacos"
                },
                "password": {
                  "type": "string",
                  "title": "Mysql password",
                  "form": true,
                  "default": "password"
                }
              }
            }
          }
        },
        "persistence": {
          "type": "object",
          "title": "Nacos Persistence data",
          "form": true,
          "properties": {
            "enable": {
              "type": "boolean",
              "titile": "Enable PersistenceVolume",
              "form": true,
              "default": true
            },
            "size": {
              "type": "string",
              "title": "capabilities",
              "form": true,
              "default": "5Gi",
              "hidden": {
                "path": "nacos/persistence/enable",
                "value": false
              }
            }
          }
        }
      }
    }
  }
}