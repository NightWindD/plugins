{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "prometheus": {
      "type": "object",
      "title": "Prometheus 配置",
      "form": true,
      "properties": {
        "retention": {
          "type": "string",
          "title": "Prometheus 数据保存时间，默认 30 天",
          "default": "30d",
          "form": true
        },
        "volumeCapacity": {
          "type": "string",
          "title": "数据卷容量, 默认 200GB",
          "default": "200Gi",
          "form": true
        },
        "maxCpu": {
          "type": "string",
          "title": "最大限制 CPU",
          "default": "8",
          "form": true
        },
        "maxMemory": {
          "type": "string",
          "title": "最大限制内存",
          "default": "16Gi",
          "form": true
        },
        "externalHost": {
          "type": "string",
          "title": "对外暴露的地址",
          "default": "prometheus.kubegems.io",
          "form": true
        },
        "externalPort": {
          "type": "string",
          "title": "对外暴露的端口号",
          "default": "9090",
          "form": true
        }
      }
    },
    "alertmanager": {
      "type": "object",
      "title": "AlertManager 配置",
      "form": true,
      "properties": {
        "replicas": {
          "type": "integer",
          "title": "实例副本数",
          "default": 1,
          "form": true
        },
        "retention": {
          "type": "string",
          "title": "告警数据保存时间，默认 7 天",
          "default": "168h",
          "form": true
        },
        "volumeCapacity": {
          "type": "string",
          "title": "数据卷容量, 默认 10GB",
          "default": "10Gi",
          "form": true
        },
        "maxCpu": {
          "type": "string",
          "title": "最大限制 CPU",
          "default": "500m",
          "form": true
        },
        "maxMemory": {
          "type": "string",
          "title": "最大限制内存",
          "default": "256Mi",
          "form": true
        },
        "externalHost": {
          "type": "string",
          "title": "对外暴露的地址",
          "default": "alertmanagerkubegems.io",
          "form": true
        },
        "externalPort": {
          "type": "string",
          "title": "对外暴露的端口号",
          "default": "9090",
          "form": true
        }
      }
    }
  }
}