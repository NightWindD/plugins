{
  "type": "object",
  "properties": {
    "alertmanager": {
      "type": "object",
      "title": "AlertManager 配置",
      "properties": {
        "externalHost": {
          "type": "string",
          "format": "hostname",
          "title": "外部公開アドレス",
          "default": "alertmanager.kubegems.io",
          "form": true
        },
        "externalPort": {
          "type": "integer",
          "title": "ポート番号を外部に公開する",
          "default": 9093,
          "maximum": 65535,
          "minimum": 0,
          "form": true
        },
        "maxCpu": {
          "type": "string",
          "format": "quantity",
          "title": "最大制限 CPU",
          "default": "500m",
          "form": true
        },
        "maxMemory": {
          "type": "string",
          "format": "quantity",
          "title": "最大メモリ制限",
          "default": "256Mi",
          "form": true
        },
        "replicas": {
          "type": "integer",
          "title": "インスタンス レプリカの数",
          "default": 1,
          "form": true
        },
        "retention": {
          "type": "string",
          "format": "duration",
          "title": "データ保持時間",
          "default": "168h",
          "form": true
        },
        "volumeCapacity": {
          "type": "string",
          "format": "quantity",
          "title": "データ容量",
          "default": "10Gi",
          "form": true
        }
      },
      "form": true
    },
    "prometheus": {
      "type": "object",
      "title": "Prometheus 配置",
      "properties": {
        "externalHost": {
          "type": "string",
          "format": "hostname",
          "title": "外部公開アドレス",
          "default": "prometheus.kubegems.io",
          "form": true
        },
        "externalPort": {
          "type": "integer",
          "title": "ポート番号を外部に公開する",
          "default": 9090,
          "maximum": 65535,
          "minimum": 0,
          "form": true
        },
        "maxCpu": {
          "type": "string",
          "title": "最大制限 CPU",
          "default": "4",
          "form": true
        },
        "maxMemory": {
          "type": "string",
          "title": "最大メモリ制限",
          "default": "8Gi",
          "form": true
        },
        "retention": {
          "type": "string",
          "title": "データ保持時間",
          "default": "30d",
          "form": true
        },
        "volumeCapacity": {
          "type": "string",
          "title": "データ容量",
          "default": "200Gi",
          "form": true
        }
      },
      "form": true
    }
  },
  "$schema": "http://json-schema.org/schema#"
}